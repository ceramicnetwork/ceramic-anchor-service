{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "inlineSources": true,
    "esModuleInterop": true,
    "pretty": true
  },
  "include": ["./src/**/*", "./config/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
