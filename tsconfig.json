{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "target": "ES2018",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "inlineSources": true,
    "pretty": true
  },
  "include": [
    "./src/**/*",
    "./config/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}